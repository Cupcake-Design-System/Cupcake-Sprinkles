{
  "name": "@cupcake-ds/cupcake-sprinkles",
  "version": "0.2.3",
  "description": "Cupcake Design System tokens",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cupcake-Design-System/Cupcake-Sprinkles.git"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint:tokens:css": "stylelint 'dist/*.scss'  --fix",
    "lint:fonts": "stylelint 'fonts/*.scss'  --fix",
    "body:fonts": "theo tokens/fonts/header.yml --setup tokens/fonts/font-size.js --format scss --dest ./fonts",
    "header:fonts": "theo tokens/fonts/body.yml --setup tokens/fonts/font-size.js --format scss --dest ./fonts",
    "map:fonts": "theo tokens/fonts/index.yml --format default.scss --dest ./fonts",
    "fonts": "npm run body:fonts && npm run header:fonts && npm run lint:fonts",
    "default2": "theo tokens/index.yml --format default.scss --dest ./index",
    "radius": "theo tokens/radius.yml --setup map-variables.js --format scss --dest ./radius",
    "lint": "stylelint 'fonts/*.scss'  --fix",
    "release": "release-it",
    "lint:tokens": "yamllint ./tokens/*.yml",
    "merge:tokens": "gulp tokens:merge",
    "default": "npm run lint:tokens && gulp && npm run merge:tokens && npm run lint:tokens:css",
    "extended": "npm run lint:tokens && gulp extended && npm run lint:tokens:css"
  },
  "keywords": [
    "sass",
    "design-system",
    "design-tokens"
  ],
  "devDependencies": {
    "ansi-colors": "^3.0.5",
    "autoprefixer": "^9.1.5",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "del": "^3.0.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-concat": "^2.6.1",
    "gulp-header": "^2.0.5",
    "gulp-rename": "^1.4.0",
    "gulp-theo": "^2.0.0-beta.1",
    "release-it": "^7.6.1",
    "require-dir": "^1.0.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.3.0",
    "theo": "^8.0.0-beta.2",
    "vinyl-paths": "^2.1.0",
    "yaml-lint": "^1.2.4"
  }
}
